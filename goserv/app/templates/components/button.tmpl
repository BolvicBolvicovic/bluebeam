{{define "button"}}
  <button 
    class="w-full py-2 px-4 bg-blue-400 text-white whitespace-nowrap font-semibold rounded-lg hover:bg-blue-500 transition"
    id="{{.ID}}"
    {{if eq .IsSubmit true}}
      type="submit"
    {{else}}
      onclick="location.href='{{.Link}}'; return false;"
    {{end}}>
    {{.Text}}
  </button>
{{end}}
