{{define "input"}}
<div class="">
    <label for="{{.ID}}">{{.Label}}</label>
    <br>
    {{if ne .Hint ""}}
        <div class="">{{.Hint}}</div>
    {{end}}
    <input
        type="{{.Type}}"
        id="{{.ID}}"
        name="{{.ID}}"
        placeholder="{{.Placeholder}}"
        {{if ne .Error ""}}
            class="error"
        {{end}}
        {{if eq .IsDisabled true}}
            disabled
        {{end}}
        {{if ne .Value ""}}
            value="{{.Value}}"
        {{end}}
    >
    <br>
    {{if ne .Error ""}}
        <div class="">{{.Error}}</div>
    {{end}}
</div>
{{end}}
